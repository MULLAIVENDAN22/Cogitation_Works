<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        /* Global Styles */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }
        
        /* Sidebar Styles */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background-color: #183cef;
            color: #fff;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .sidebar .logo {
            width: 100px;
            height: 100px;
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .sidebar .logo img {
            width: 250px;
            height: 100px;
        }
        
        .sidebar ul {
            list-style: none;
            margin: 0;
            padding: 0;
            width: 100%;
        }
        
        .sidebar li {
            margin-bottom: 10px;
        }
        
        .sidebar a {
            color: #fff;
            text-decoration: none;
            padding: 10px;
            display: block;
            border-radius: 5px;
            transition: background-color 0.2s ease;
        }
        
        .sidebar a:hover {
            background-color: #0829ae;
        }
        
        /* Main Content Styles */
        .main-content {
            margin-left: 250px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .main-content .header {
            background-color: #fff;
            padding: 20px;
            border-bottom: 1px solid #ddd;
            width: 100%;
            display: flex;
            justify-content: space -between;
            align-items: center;
            position: relative; /* Added for positioning */
        }
        
        .main-content .header h1 {
            font-size: 24px;
            font-weight: bold;
            margin: 0;
        }
        
        .header-right {
            display: flex;
            align-items: center;
            justify-content: flex-end; /* Aligns items to the right */
            position: absolute; /* Allows positioning in the header */
            right: 20px; /* Adjusts the right position */
        }
        
        .header-right .name {
            margin-right: 15px;
        }
        
        .main-content .header .settings {
            position: relative;
        }
        
        .main-content .header .settings-icon {
            font-size: 24px;
            cursor: pointer;
        }
        
        .main-content .header .settings-dropdown {
            position: absolute;
            top: 40px;
            right: 0;
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 10px;
            display: none;
        }
        
        .main-content .header .settings-dropdown.show {
            display: block;
        }
        
        .main-content .header .settings-dropdown li {
            margin-bottom: 10px;
        }
        
        .main-content .header .settings-dropdown a {
            color: #333;
            text-decoration: none;
        }
        
        .main-content .header .settings-dropdown a:hover {
            background-color: #f9f9f9;
        }
        
        /* Boxes Styles */
        .boxes {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .box {
            width: 620px;
            height: auto;
            background: #3a9ec5;
            border: 1px solid #196bc9;
            padding: 20px;
            margin: 10px auto;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
            animation: fadeIn 1s;
            position: relative;
        }
        
        .box h2 {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }
        
        .box p {
            font-size: 16px;
            margin-bottom: 20px;
            color: #666;
        }
        
        .form-columns {
            display: flex;
            justify-content: space-between;
        }
        
        .form-column {
            width: 45%;
        }
        
        .form-submit {
            text-align: center;
            margin-top: 10px;
        }
        
        .form-group {
            margin-bottom: 15px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        
        .form-group input, .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        
        .form-group input:hover, .form-group textarea:hover {
            border: 1px solid #aaa;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            transform: scale(1.01);
        }
        
        .form-group input:focus, .form-group textarea:focus {
            border: 1px solid #aaa;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }
        
        .form-submit input {
            background: linear-gradient(135deg, #2196f3, #4caf50);
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .form-submit input:hover {
            background: linear-gradient(135deg, #1a237e, #2ecc71);
            transform: scale(1.05);
        }
        
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        
        /* Responsive Styles */
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            
            .main-content {
                margin-left: 0;
            }
        }
 @media (max-width: 480px) {
            .card {
                width: 100%;
            }
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
        }
        
        .header-right {
            display: flex;
            align-items: center;
            justify-content: flex-end;
        }
        
        .name {
            margin-right: 15px;
        }
        .settings-icon {
            font-size: 40px; /* Increased size for better visibility */
            color: #fff; /* Icon color */
            background: linear-gradient(135deg, #2196f3, #4caf50); /* Gradient background */
            border-radius: 50%; /* Circular background */
            padding: 10px; /* Padding for the circle */
            margin-right: 10px; /* Margin for spacing */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Add shadow effect */
            cursor: pointer; /* Make the icon clickable */
        }
        
        .settings-icon:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }
        
        .box {
            background-color: #f7f7f7;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }
        
        .form-group input, .form-group textarea {
            border-radius: 10px;
            padding: 15px;
            font-size: 16px;
        }
        
        .form-submit input {
            padding: 15px 30px;
            font-size: 18px;
        }
        
        .form-submit input:hover {
            transform: scale(1.1);
        }
        
        .form-container {
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo">
            <img src="images/logo1.png" alt="Logo">
        </div>
        <ul>
            <li><a href="/merchant">Dashboard</a></li>
            <li><a href="/add_item">Add item</a></li>
            <li><a href="/manage_Item">Manage Item</a></li>
            <li><a href="/pending_orders">Pending orders</a></li>
            <li><a href="/confirm_orders">Confirm orders</a></li>
            <li><a href="/m_profile">Profile</a></li>
            <li><a href="/m_histroy">Histroy</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            <h1>Merchant Dashboard</h1>
            <div class="header-right">
                <h4 class="name">Hii, <%= session.username %>!</h4>
                <div class="settings">
                    <i class="fa fa-user settings-icon" id="settings-icon"></i>
                    <ul class="settings-dropdown" id="settings-dropdown">
                        <li><a href="#" style="background-color: #2196f3; color: #fff; border-radius: 5px; padding: 10px;">MyProfile</a></li><br>
                        <li><a href="/logout" style="background-color: #e74c3c; color: #fff; border-radius: 5px; padding: 10px;">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <br><br><br>
        <div class="box">
            <h2><center><u>Add Item</u></center></h2><br><br>
            <div class="form-container">
                <form action="/insert" method="post" enctype="multipart/form-data">
                    <div class="form-columns">
                        <div class="form-column">
                            <div class="form-group">
                                <label for="item_name">Item Name:</label>
                                <input type="text" name="item_name" required pattern=".{1,}" title="Item name must be at least 1 character long.">
                            </div>
                            <div class="form-group">
                                <label for="item_description">Item Description:</label>
                                <input type="text" name="item_description" required pattern=".{1,}" title="Description must be at least 1 character long.">
                            </div>
                        </div>
                        <div class="form-column">
                            <div class="form-group">
                                <label for="item_amount">Price:</label>
                                <input type="number" name="item_amount" required min="0" step="0.01" title="Please enter a valid price (0 or greater).">
                            </div>
                            <div class="form-group">
                                <label for="item_image">Item Image:</label>
                                <input type="file" name="item_image" accept="image/*" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-submit">
                        <input type="submit" value="Create Item">
                    </div>
                </form>
            </div>
        </div>

        <!-- Modal for Success Message -->
        <div id="successModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); z-index:1000; justify-content:center; align-items:center;">
            <div style="background:white; padding:20px; border-radius:5px; text-align:center;">
                <h2 id="successMessage">Item inserted successfully!</h2>
                <button id="closeModal">Close</button>
            </div>
        </div>

        <!-- JavaScript Code -->
        <script>
            document.querySelector('form').addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent the default form submission

                const formData = new FormData(this);

                fetch('/insert', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    // Show success message in modal
                    document.getElementById('successMessage').innerText = data.message;
                    document.getElementById('successModal').style.display = 'flex';
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while inserting the item.');
                });
            });

            // Close modal functionality
            document.getElementById('closeModal').addEventListener('click', function() {
                document.getElementById('successModal').style.display = 'none';
            });
        </script>
    </body>
</html>