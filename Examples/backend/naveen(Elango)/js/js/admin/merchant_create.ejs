    <script>
        document.querySelector('form').addEventListener('submit', function(event) {
            const name = document.querySelector('input[name="name"]');
            const dob = document.querySelector('input[name="dob"]');
            const address = document.querySelector('textarea[name="address"]');
            const email = document.querySelector('input[name="email"]');
            const phone = document.querySelector('input[name="phone"]');
            const password = document.querySelector('input[name="password"]');
            const idProof = document.querySelector('input[name="idProof"]');
    
            // Validate Name
            if (!name.value.match(/[A-Za-z\s]+/)) {
                alert("Name must contain only letters and spaces.");
                name.focus();
                event.preventDefault();
                return;
            }
    
            // Validate Date of Birth
            const today = new Date();
            const birthDate = new Date(dob.value);
            if (birthDate > today) {
                alert("Date of Birth cannot be in the future.");
                dob.focus();
                event.preventDefault();
                return;
            }
    
            // Validate Address
            if (address.value.length < 10) {
                alert("Address must be at least 10 characters long.");
                address.focus();
                event.preventDefault();
                return;
            }
    
            // Validate Email
            const emailPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;
            if (!email.value.match(emailPattern)) {
                alert("Please enter a valid email address.");
                email.focus();
                event.preventDefault();
                return;
            }
    
            // Validate Phone
            if (!phone.value.match(/^\d{10}$/)) {
                alert("Phone number must be exactly 10 digits and contain only numbers.");
                phone.focus();
                event.preventDefault();
                return;
            }
    
            // Validate Password
            if (password.value.length < 8) {
                alert("Password must be at least 8 characters long.");
                password.focus();
                event.preventDefault();
                return;
            }
    
            // Validate ID Proof File
            const validExtensions = ['jpg', 'jpeg', 'png', 'pdf'];
            const fileExtension = idProof.value.split('.').pop().toLowerCase();
            if (!validExtensions.includes(fileExtension)) {
                alert("Please upload a valid ID file (jpg, jpeg, png, pdf).");
                idProof.focus();
                event.preventDefault();
                return;
            }
        });
    </script>
